/* 3.5, current day of year	
*/
#include <stdio.h>
#define shortmonth 30
#define longmonth 31

int
main(int argc, char *argv[]) {
	int d, m, y, length_of_feb, daynumber, daystillaugust;
	printf("Enter date in dd/mm/yyyy format: ");
	scanf("%d/%d/%d", &d, &m, &y);
	length_of_feb = 28 + (y%4==0 && (y%100!=0 || y%400==0));
	daystillaugust = 4*longmonth + 2*shortmonth + length_of_feb;
	if (m==1){
		daynumber = d;
	}else if (m<=7){
		daynumber = d + m/2*longmonth + (m>2)*(length_of_feb + (m-2)/2 *shortmonth);
	}else{
		daynumber = d + daystillaugust + (m-7)/2*longmonth + (m-8)/2*shortmonth;
	}
	printf("%02d/%02d/%04d is day number %d in the year\n", d, m, y, daynumber);
	return 0;
}
